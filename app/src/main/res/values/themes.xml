<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YouWater" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/Button</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.YouWater.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="Theme.YouWater.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>
</resources>