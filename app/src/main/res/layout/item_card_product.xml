<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <import type="android.widget.ImageButton"/>
        <variable
            name="product"
            type="ru.iwater.youwater.data.Product" />
        <variable
            name="productItemClick"
            type="ru.iwater.youwater.screen.adapters.AdapterProductList.OnProductItemClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_product"
        android:layout_width="152dp"
        android:layout_height="201dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        android:onClick="@{() -> productItemClick.aboutProductClick(product)}" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="0dp"
                android:layout_height="97dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:background="@color/transparent"
                android:contentDescription="@string/general_favorite"
                app:imageUrl="@{product.gallery}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/iv_like"
                android:layout_width="25dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/general_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name_product"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_above="@+id/tv_sum_no_discount"
                android:layout_below="@+id/iv_product"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-black"
                android:maxLines="3"
                android:minLines="1"
                android:text="@string/item_card_product_name_product"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_sum_no_discount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_product"
                app:layout_constraintVertical_bias="0.0"
                app:nameProduct="@{product}" />

            <TextView
                android:id="@+id/tv_sum_no_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_cost_product"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:text="@string/general_zero"
                android:textSize="@dimen/_7ssp"
                android:visibility="visible"
                app:costProductNoDiscount="@{product}"
                app:layout_constraintBottom_toTopOf="@+id/tv_cost_product"
                app:layout_constraintEnd_toStartOf="@+id/iv_btn_plus"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_btn_plus"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_cost_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@+id/iv_btn_plus"
                android:text="@string/item_card_product_cost_product"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold"
                app:costProduct="@{product}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_btn_plus"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_btn_plus"
                app:layout_constraintVertical_bias="1.0" />

            <ImageButton
                android:id="@+id/iv_btn_plus"
                style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/transparent"
                android:contentDescription="@string/description_add_product"
                android:onClick="@{() -> productItemClick.onProductItemClicked(product)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_btn_plus" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>