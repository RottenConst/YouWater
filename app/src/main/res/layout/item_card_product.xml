<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <import type="android.widget.ImageButton"/>
        <variable
            name="product"
            type="ru.iwater.youwater.data.Product" />
        <variable
            name="productItemClick"
            type="ru.iwater.youwater.screen.adapters.AdapterProductList.OnProductItemClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_product"
        android:layout_width="152dp"
        android:layout_height="201dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        android:onClick="@{() -> productItemClick.aboutProductClick(product)}" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="127dp"
                android:layout_height="97dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:background="@color/transparent"
                android:contentDescription="@string/favorite"
                app:imageUrl="@{product.gallery}"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/iv_like"
                android:layout_width="25dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="14dp"
                android:contentDescription="@string/favorite"
                />

            <TextView
                android:id="@+id/tv_name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_sum_no_discount"
                android:layout_below="@+id/iv_product"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:text="@string/str_name_product"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:nameProduct="@{product}" />

            <TextView
                android:id="@+id/tv_sum_no_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_cost_product"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="0dp"
                android:visibility="gone"
                android:text=""
                app:costProductNoDiscount="@{product}"/>

            <TextView
                android:id="@+id/tv_cost_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@+id/iv_btn_plus"
                android:text="@string/str_cost_product"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:costProduct="@{product}" />

            <ImageButton
                android:id="@+id/iv_btn_plus"
                style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/transparent"
                android:contentDescription="@string/btn_add_desc"
                android:onClick="@{() -> productItemClick.onProductItemClicked(product)}"
                app:srcCompat="@drawable/ic_btn_plus" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>