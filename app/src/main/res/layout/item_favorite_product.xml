<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="favorite"
            type="ru.iwater.youwater.data.Product" />
        <variable
            name="onFavoriteItemClick"
            type="ru.iwater.youwater.screen.adapters.FavoriteProductAdapter.OnFavoriteProductClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_favorite"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="152dp"
        android:layout_height="201dp"
        android:onClick="@{() -> onFavoriteItemClick.aboutFavoriteClick(favorite)}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="127dp"
            android:layout_height="97dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:contentDescription="@string/favorite"
            app:imageUrl="@{favorite.gallery}"
            tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/iv_like_favorite"
                android:layout_width="25dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/ic_like_true"
                android:onClick="@{() -> onFavoriteItemClick.onLikeItemClick(favorite)}"/>

            <TextView
                android:id="@+id/tv_name_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_favorite_no_discount"
                android:layout_below="@+id/iv_favorite"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:nameProduct="@{favorite}" />

            <TextView
                android:id="@+id/tv_favorite_no_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_cost_favorite"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="0dp"
                android:visibility="gone"
                android:textSize="12sp"
                app:costProductNoDiscount="@{favorite}"/>

            <TextView
                android:id="@+id/tv_cost_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@+id/iv_btn_plus"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:costProduct="@{favorite}" />

        <Button
            android:id="@+id/iv_btn_plus"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_btn_plus"
            android:onClick="@{() -> onFavoriteItemClick.addItemInBasked(favorite)}"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>